unbind r
unbind C-s
bind r source-file ~/.config/tmux/tmux.conf

set -g prefix C-b
bind C-b send-prefix

setw -g mode-keys vi

bind-key h select-pane -L 
bind-key n select-pane -D 
bind-key l select-pane -U 
bind-key e select-pane -R

bind-key C-h resize-pane -L
bind-key C-n resize-pane -D
bind-key C-l resize-pane -U
bind-key C-e resize-pane -R

set -g mouse on

set -g base-index 1

set-option -g focus-events on

set-option -g terminal-features "xterm-256color:RGB"
set -g default-terminal "tmux-256color"
set-option -ga terminal-overrides "xterm-256color:Tc"
set -gq allow-passthrough all

bind-key -T copy-mode-vi 'v' send -X begin-selection
bind-key -T copy-mode-vi 'y' send -X copy-selection

set -g status-justify absolute-centre

# List of plugins
set -g status-right "#H [ #S ] %a %d-%m-%Y %H:%M "

set -g window-status-format "#I "
set -g window-status-current-format "#[bg=brightwhite,fg=black]#I: #W "

set -g status-style fg=brightwhite,bg=black
